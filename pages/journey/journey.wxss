.watting-text{
  font-weight: 800;
  padding-left: 18rpx;
  line-height: 60rpx;
}

.up-and-down{
  display: flex;
  flex-direction: column;
  border-right: 1px solid #e6e6e6;
  height: 60rpx;
  padding-right: 26rpx;
}
.time-wait-string{
  color :#9196aa;
}

.time-wait-number{
  color :#fe7201;
