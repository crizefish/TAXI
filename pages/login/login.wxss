/* pages/login.wxss */
.page-body{
  position: fixed; 
  height: 100%; 
  width: 100%; 
  display:flex; 
  flex-direction: column;
  background-size: cover;
}

.bg{
  content: "";
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
  background: inherit;
  z-index: 2;
}

.content{
  position: absolute;
  left:0;
  top:0;
  right: 0;
  bottom: 0;
  z-index: 3;
  display: flex;
  padding-top: 220rpx;
  box-sizing: border-box;
  justify-content: center;
}

.login, .verification-code{
  background: #fff;
  width: 380rpx;
  height: 318rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  display: flex;
  flex-direction: column;
  padding-top: 45rpx;
}

 .verification-code{
   padding-top: 0;
   width: 480rpx;
   height: 490rpx;
 }

 .arrow{
   width: 32rpx;
   height: 32rpx;
   margin-top: 26rpx;
   margin-left: 26rpx;
   margin-bottom: 34rpx;
   transform: rotate(90deg);
 }

.title{
  color: #010101;
  font-size: 14pt;
  align-self: center;
  margin-bottom: 22rpx;
}

.input-box,.input-box-of-password{
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  border-bottom: 1px solid #f0f0f0;
  font-size: 11pt;
  color: #c8c8c8;
  padding-left: 20rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.input-box{
  margin-bottom: 68rpx;
}

.input-box-of-password{
  display:block;
}

.input-box text{
  padding-right: 20rpx;
  color: #333;
}

.input{
  color: #333;
}

.next{
  width: 100%;
  background: #bfbfbf;
  color: #fff;
}

.next::after{
  border: none;
}

.inpu-password{
  background: #fff;
  width: 485rpx;
  height: 458rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  display: flex;
  flex-direction: column;
  padding-top: 45rpx;
}

.inpu-password .input{
  text-align: center;
}

.password-box{
  margin-top: 30rpx;
}

.forget-password{
  background: #fff;
  font-size: 11pt;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.forget-password::after{
  border: none;
}

.my-phone{
  display: flex;
  flex-direction: row;
  font-size: 11pt;
  color: #8b8b8b;
  justify-content: space-around;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.wait-minute{
  background: #fff;
  padding:20rpx 28rpx;
  display: block;
  line-height: 1.4;
  margin-top: 28rpx;
  margin-bottom: 80rpx;
}

.square-box{
  display: flex;
  flex-direction: row;
  padding-left: 8rpx;
  padding-bottom: 8rpx;
  box-sizing: border-box;
  text-align: center
}

.square{
  width: 80rpx;
  height: 70rpx;
  border-radius: 8rpx;
  border: 1px solid #515151;
  margin-right: 10rpx;
}
.square-input{
   border: 1px solid #515151;
    position: absolute;
    top: 613rpx;
    width: 62%;
}

.square-choice{
  border-color: #b9b08f;
  box-shadow: 0 0 8rpx rgba(185, 176, 143, 0.6)
}

.set-password{
  color: #a0a0a0;
  font-size: 9pt;
  text-align: center;
  margin-top: -20rpx;
  margin-bottom: 62rpx;
}

.set-password-box{
  height: 345rpx;
}
