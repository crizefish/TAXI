/* pages/login.wxss */
.page-body{
  position: fixed; 
  height: 100%; 
  width: 100%; 
  display:flex; 
  flex-direction: column;
  background-size: cover;
}

.bg{
  content: "";
  width:100%;
  height:100%;
  position: absolute;
  left:0;
  top:0;
  background: inherit;
  filter: blur(15px);
  z-index: 2;
}

.content{
  position: absolute;
  left:0;
  top:0;
  right: 0;
  bottom: 0;
  z-index: 3;
  display: flex;
  padding-top: 220rpx;
  box-sizing: border-box;
  justify-content: center;
}

.login{
  background: #fff;
  width: 380rpx;
  height: 318rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  display: flex;
  flex-direction: column;
  padding-top: 45rpx;
}

.title{
  color: #010101;
  font-size: 14pt;
  align-self: center;
  margin-bottom: 22rpx;
}

.input-box,.input-box-of-password{
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  border-bottom: 1px solid #f0f0f0;
  font-size: 11pt;
  color: #c8c8c8;
  padding-left: 20rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.input-box{
  margin-bottom: 68rpx;
}

.input-box-of-password{
  display:block;
}

.input-box text{
  padding-right: 20rpx;
  padding-top: 7rpx;
}

.input{
  color: #333;
}

.next{
  width: 100%;
  background: #bfbfbf;
  color: #fff;
}

.next::after{
  border: none;
}

.inpu-password{
  background: #fff;
  width: 485rpx;
  height: 458rpx;
  box-sizing: border-box;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  display: flex;
  flex-direction: column;
  padding-top: 45rpx;
}

.inpu-password .input{
  text-align: center;
}

.password-box{
  margin-top: 30rpx;
}

.forget-password{
  background: #fff;
  font-size: 11pt;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.forget-password::after{
  border: none;
}
