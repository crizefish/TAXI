/* pages/gameover/gameover.wxss */
.container-box{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0,0.3);
  z-index: 10;
}

.evaluate-box{
  position: absolute;
  left: 0;
  bottom: 0;
  background: #fff;
  width: 100%;
  height: 80%;
  padding-left: 17rpx;
  padding-right: 19rpx;
  box-sizing: border-box;
}

.title{
  padding-top: 60rpx;
  padding-bottom: 38rpx;
  box-sizing: border-box;
  border-bottom:1px solid #ddd;
  text-align: center;
  font-size: 15pt;
  position: relative;
}

.close-img{
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  top: 45rpx;
  left: 28rpx;
}

.stars-box{
  display: flex;
  flex-direction: row;
  padding-left: 110rpx;
  box-sizing: border-box;
  padding-top: 30rpx;
  padding-bottom: 45rpx;
}

.star{
  width: 58rpx;
  height: 58rpx;
  margin-right: 45rpx;
}

.praise-box{
  display: flex;
  justify-content: center;
}

.praise-box text{
  font-size: 12pt;
  color: #fea235;
}

.btn-home{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  padding-left: 10rpx;
  padding-right: 10rpx;
  box-sizing: border-box;
  margin-top: 45rpx;
}

.btn-home button{
  width: 40%;
  margin-bottom: 20rpx;
  font-size: 11pt;
}

.orange{
  border: 1px solid #fea235;
  background: rgba(254,162,53,0.1);
}

.orange::after{
  border: 0;
}

.input-box{
  width: 86%;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  font-size: 11pt;
  background: #f3f4f6;
  margin-top: 15rpx;
  margin-bottom: 50rpx;
}

.anonymous{
  width: 86%!important;
  padding-top: 10rpx!important;
  padding-bottom: 10rpx!important;
  font-size: 14pt!important;
  background: #4a4c5b;
  color: #fff;
  box-sizing: border-box;
}

.done-sign-box{
   display: flex;
   flex-direction:column; 
   align-items: center;
  justify-content: center;
  padding-top: 30%;
}
.done-sign{
  width: 102rpx;
  height: 102rpx;

}
.done-text{
  margin-top: 40rpx;
  font-size: 13pt
} 