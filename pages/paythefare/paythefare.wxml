<!--pages/paythefare/paythefare.wxml-->
<scroll-view class='page-body' scroll-y="true">
  <!--以下是司机相关信息  -->
  <view class='message-box'>
    <view class='driver-box'>
      <view class='driver-message'>
        <view class='driver'>
          <image class='driver-image-style' src='{{driver}}'></image>
          <view class='evaluate'>
            <text class='driver-name'>{{driverName}}</text>
            <view>
              <text class='license'>{{license}}</text>
            </view>
          </view>
        </view>
        <view class='car-box'>
          <image src='{{callDriver}}' class='call-driver'></image>
        </view>
      </view>
      <view class='position-box'>
        <view class='dot'>
          <view class='green'></view>
          <view class='line'></view>
          <view class='red'></view>
        </view>
        <view class='detail-pos'>
          <text class='current-pos'>{{currentPos}}</text>
          <text class='destination'>{{destination}}</text>
        </view>
      </view>
    </view>
    <!--以下是支付金额  -->
    <view class='pay-title-c'>
      <text>支付金额:</text>
      <text class='howmuch'>{{howmuch}}</text>
      <text>元</text>
    </view>
    <!--以下是快车  -->
    <view class='driver-box quick'>
      <view class='title'>
        <view class='bottom-line'></view>
        <text wx:if="{{carType == 'kc'}}">快车</text>
        <text wx:if="{{carType == 'pc'}}">拼车</text>
        <view class='bottom-line'></view>
      </view>
      <view class='about-trip' wx:if="{{carType == 'kc'}}">
        <view class='item'>
          <text>起步价</text>
          <text class='starting-price'>{{startingPrice}}元</text>
        </view>
        <view class='item'>
          <text>里程费 ({{mileage}}公里)</text>
          <text class='starting-price'>{{kmFee}}元</text>
        </view>
        <view class='item'>
          <text>时长费 ({{minute}}分钟)</text>
          <text class='starting-price'>{{timeFee}}元</text>
        </view>
      </view>
    </view>

    
    <!--以下是支付方式  -->
    <view class='pay-title-c'>
      <text>支付方式</text>
    </view>
    <view class='driver-box quick methods'>
      <view class='about-trip'>
        <view class='item' bindtap='choicePayType' id="balance" data-hi="WeChat">
          <view class='pay-pay'>
            <image src='{{balancePayment}}' class='pay-image'></image>
            <text>余额支付</text>
          </view>
          <image src='{{selected}}' class='selected' wx:if="{{payType=='balance'}}"></image>
          <image src='{{select}}' class='selected' wx:if="{{payType!='balance'}}"></image>
        </view>
        <view class='item' bindtap='choicePayType' id="weixinApp" data-hi="WeChat">
          <view class='pay-pay'>
            <image src='{{wechatPayment}}' class='pay-image'></image>
            <text>微信支付</text>
          </view>
          <image src='{{selected}}' class='selected' wx:if="{{payType=='weixinApp'}}"></image>
          <image src='{{select}}' class='selected' wx:if="{{payType!='weixinApp'}}"></image>
        </view>
        <!-- <view class='item' bindtap='choicePayType' id="alipayApp" data-hi="WeChat">
          <view class='pay-pay'>
            <image src='{{alipayPayment}}' class='pay-image'></image>
            <text>支付宝支付</text>
          </view>
          <image src='{{selected}}' class='selected' wx:if="{{payType=='alipayApp'}}"></image>
          <image src='{{select}}' class='selected' wx:if="{{payType!='alipayApp'}}"></image>
        </view> -->
      </view>
    </view>
    <!--以下是按钮  -->
    <view class='message-box btn-box' bindtap='pay'>
      <button class='pay-button'>去支付</button>
    </view>

<!-- ///////////////////////////////////// -->
 </view>

  <!--输入钱包密码-->

  <view wx:if="{{wallets_password_flag}}" class="wallets-password">
    <view class="input-content-wrap">
      <view class="top">
        <view catchtap="closePay" class="close">×</view>
        <view class="txt">请输入支付密码</view>
        <view catchtap="modify_password" class="forget"></view>
      </view>
      <view class="actual_fee">
        <span>￥</span>
        <text>{{howmuch}}</text>
      </view>
      <view catchtap="set_Focus" class="input-password-wrap">
        <view class="password_dot">
          <i wx:if="{{wallets_password.length>=1}}"></i>
        </view>
        <view class="password_dot">
          <i wx:if="{{wallets_password.length>=2}}"></i>
        </view>
        <view class="password_dot">
          <i wx:if="{{wallets_password.length>=3}}"></i>
        </view>
        <view class="password_dot">
          <i wx:if="{{wallets_password.length>=4}}"></i>
        </view>
        <view class="password_dot">
          <i wx:if="{{wallets_password.length>=5}}"></i>
        </view>
        <view class="password_dot">
          <i wx:if="{{wallets_password.length>=6}}"></i>
        </view>

      </view>

    </view>
 <input bindinput="set_wallets_password" class="input-content" password type="number" focus="{{isFocus}}" maxlength="6" />

<!-- ///////////////////////////////////// -->

  </view>
</scroll-view>