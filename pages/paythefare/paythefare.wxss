/* pages/paythefare/paythefare.wxss */
.page-body{
  background: #f5f5f7;
}

.message-box{
  display: flex;
  flex-direction: column;
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.driver-box{
  margin-top: 13rpx;
  padding:30rpx 5rpx 8rpx 5rpx;
  box-sizing: border-box;
  background: #fff;
  border: 1px solid #e1e1e1;
  border-radius: 3px;
}

.driver-message{
  border-bottom: 1px solid #e1e1e1;
  display: flex;
  width: 100%;
  padding-bottom: 20rpx;
}

.driver-image-style{
  margin-right: 28rpx;
}

.car-box,.driver{
  width: 50%;
}

.driver{
  display: flex;
  flex-direction: row;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.driver-name{
  color: #010101;
  font-size: 14pt;
  padding-top:17rpx;
  margin-bottom: 5rpx;
}

.license{
  font-size: 12pt;
  margin-bottom: 15rpx;
  padding-top: 10rpx;
  box-sizing: border-box;
  color: #010101;
}

.evaluate{
  display: flex;
  flex-direction: column;
}

.call-driver{
  width: 42rpx;
  height: 42rpx;
  margin-right: -145rpx
}

.car-box{
  display: flex;
  justify-content: center;
  align-items: center;
}

/*位置信息*/
.position-box{
  padding:23rpx 30rpx 17rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
}

.dot{
  display: flex;
  flex-direction: column;
  width: 16rpx;
  margin-top: 20rpx;
}

.green,.red{
  width: 16rpx;
  height: 16rpx;
  border-radius: 25rpx;
}

.green{
  background: #00c594;
}

.red{
  background: #f68e4f;
}

.line{
  width: 2rpx;
  height: 55rpx;
  background: #c7c7c9;
  margin-top: 3rpx;
  margin-bottom: 3rpx;
  margin-left:8rpx;
}

.detail-pos{
  display: flex;
  flex-direction: column;
  padding-left: 25rpx;
}

.current-pos,.destination{
  color: #515151;
  font-size: 12pt;
  line-height: 66rpx;
}

.pay{
  display: flex;
  flex-direction: row;
  font-size: 12pt;
  align-items: baseline;
  padding: 15rpx 20rpx 20rpx;
  color: #58585a;
}

.howmuch{
  font-size: 25pt;
  padding-left: 30rpx;
  padding-right: 20rpx;
  color: #000;
}

.quick{
  padding: 30rpx 37rpx 17rpx 27rpx ;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  font-size: 12pt;
}

.title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.bottom-line{
  width: 238rpx;
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  align-self: center;
} 

.about-trip{
  padding-top: 32rpx;
  padding-left: 19rpx;
  padding-right: 12rpx;
  box-sizing: border-box;
}

.item{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  flex-direction: row;
  align-items: center;
}

.item:nth-child(3){
  margin-bottom: 0rpx;
}

.starting-price{
  color: #b5b5b5;
}

.methods{
  padding-top: 0;
}

.pay-image{
  width: 68rpx;
  height: 68rpx;
  margin-right: 21rpx;
}

.selected{
  width: 26rpx;
  height: 26rpx;
}

.pay-pay{
  display: flex;
  align-items: center;
}

.pay-button{
  margin-top: 10rpx;
  width: 100%;
  background-color: #4a4c59;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.btn-box{
  padding-left: 0;
  padding-right: 0;
}